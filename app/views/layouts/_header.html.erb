<div class="bg-base-100 text-base-content sticky top-0 z-30 flex h-16 w-full justify-center bg-opacity-90 backdrop-blur transition-shadow duration-100 [transform:translate3d(0,0,0)]">
  <div class="navbar w-full">
    <div class="flex-none">
      <label for="my-drawer" class="btn btn-square btn-ghost drawer-button">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-6 h-6 stroke-current">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </label>
    </div>
    <div class="flex-none px-2 mx-2">
      <span class="text-lg font-bold">
        <a href="/" aria-current="page" aria-label="Homepage" class="flex-0 btn btn-ghost px-2">
          <svg width="32" height="32" viewBox="0 0 415 415" xmlns="http://www.w3.org/2000/svg">
            <rect x="82.5" y="290" width="250" height="125" rx="62.5" fill="#1AD1A5"></rect>
            <circle cx="207.5" cy="135" r="130" fill="black" fill-opacity=".3"></circle>
            <circle cx="207.5" cy="135" r="125" fill="white"></circle><circle cx="207.5" cy="135" r="56" fill="#FF9903"></circle>
          </svg>
          <div class="font-title inline-flex text-lg md:text-2xl">
            <span class="lowercase">daisy</span>
            <span class="uppercase text-[#1AD1A5]">UI</span>
          </div>
        </a>
      </span>
    </div>
    <div class="form-control hidden md:flex">
      <input type="text" placeholder="Search" class="input input-bordered w-24 md:w-auto" />
    </div>
    <div class="flex justify-center flex-1 px-2 mx-2">
      <div class="items-stretch hidden lg:flex">
        <a href="/" class="btn btn-ghost btn-sm rounded-btn"> Home </a>
        <a href="/pages/themes"class="btn btn-ghost btn-sm rounded-btn"> Themes </a>
        <a href="/pages"  class="btn btn-ghost btn-sm rounded-btn"> Pages </a>
        <a href="/pages/icons"  class="btn btn-ghost btn-sm rounded-btn"> Icons </a>
        <a href="https://github.com/mkhairi/rails-daisyui-starter" target="_blank" class="btn btn-ghost btn-sm rounded-btn"> Source </a>
      </div>
    </div>
    <div title="Change Theme" class="dropdown dropdown-end">
      <div tabindex="0" class="m-1 normal-case btn-ghost btn">
        <%= icon :swatch %>
        <span class="hidden md:inline">
          Change Theme
        </span>
        <%= icon :chevron_down, class: 'w-4 h-4' %>
      </div>
      <div class="mt-14 overflow-y-auto shadow-2xl top-px dropdown-content h-96 w-52 z-[1] rounded-b-box bg-base-200 text-base-content">
        <ul class="p-4 menu compact" data-controller="theme">
          <% themes.each do |theme| %>
            <li><a tabindex="0" data-action="click->theme#switch" data-theme-value="<%= theme %>"><%= theme.humanize %></a></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="flex-none gap-2">
      <% if user_signed_in? %>
        <div class="dropdown dropdown-end">
          <label tabindex="0" class="btn btn-ghost btn-circle avatar">
            <div class="w-10 rounded-full">
              <img alt="Avatar" src="https://i.pravatar.cc/500?img=<%=(1..70).to_a.sample%>" />
            </div>
          </label>
          <ul tabindex="0" class="mt-3 z-[1] p-2 shadow menu menu-sm dropdown-content bg-base-100 rounded-box w-52">
            <li>
              <a class="justify-between"> Profile
                <span class="badge">New</span>
              </a>
            </li>
            <li><a>Settings</a></li>
            <li><%= button_to "Log out", destroy_user_session_path, method: :delete, data: { turbo: false } %> </li>
          </ul>
        </div>
      <% else %>
        <%= link_to "Sign In", new_user_session_path, class:"btn btn-ghost btn-sm rounded-btn", data: { turbo: false } %>
      <% end %>
    </div>
  </div>
</div>

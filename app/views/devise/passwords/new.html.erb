<h2 class="mt-8 text-2xl font-bold leading-9 tracking-tight text-primary">Forgot your password?</h2>
<p class="mt-2 text-sm leading-6">
  Suddenly remembered your password?
  <a href="/users/sign_in" class="font-semibold text-primary hover:text-secondary">Sign In</a>
</p>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs mt-2">
    <%= f.input :email,
                label: false,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Send me reset password instructions", class: "w-full" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
